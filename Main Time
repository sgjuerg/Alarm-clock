#include <stdio.h>
#include <time.h>
#include <stdbool.h>
#include <unistd.h>

    int main() {
       
       time_t rawtime = 0; // Variable type for time large integer Jan 1 1970 (Epoch)
       struct tm *pTime = NULL;
       bool isRunning = true;

       printf("-------------Current Alarm Sets\n");

        printf("Current Time\n");

        while(isRunning){
          
           time(&rawtime);
          
          pTime = localtime(&rawtime);

          printf("%02d:%02d:%02d\n", pTime->tm_hour, pTime->tm_min, pTime->tm_sec);

            sleep(1); //only works on linux and mac
        }
        return 0;
    }